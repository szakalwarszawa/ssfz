{% extends "SsfzBundle::baseLayout.html.twig" %}

{% block body %}
    <div id="login-form" class="col-md-12">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="row">
                <p id="error"></p>
                {{ error }}
                {% form_theme form 'bootstrap_3_layout.html.twig' %}
                {{ form_start(form) }}
                <h3>
                    <span>Przypomnij hasło</span>
                </h3>
                {{ form_row(form.login) }}
                {{ form_row(form.email) }}
                <div id="form-submit-div">
                    <button class="form-control orange-button" type="submit">Wyślij</button>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('button[class^=form-control]').on('click', function () {
                if ($('#reset_link_login').val() == '' || $('#reset_link_email').val() == '') {
                    $('#error').html('Nie wypełniono wszystkich pół formularza.');
                } else
                    $('#error').html('');
            });
        });
    </script>
{% endblock %}
